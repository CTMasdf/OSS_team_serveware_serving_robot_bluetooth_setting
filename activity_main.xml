<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/tvBluetoothStatus"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="6dp"
        android:layout_marginBottom="562dp"
        android:text=""
        app:layout_constraintBottom_toTopOf="@+id/imageView"
        app:layout_constraintEnd_toStartOf="@+id/imageView2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnBluetoothOn"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="13dp"
        android:text="블루투스 ON"
        app:layout_constraintBottom_toTopOf="@+id/btnConnect"
        app:layout_constraintEnd_toStartOf="@+id/btnBluetoothOff"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvBluetoothStatus" />

    <Button
        android:id="@+id/btnBluetoothOff"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="148dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="12dp"
        android:text="블루투스 OFF"
        app:layout_constraintBottom_toTopOf="@+id/btnConnect"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btnBluetoothOn"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnConnect"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="28dp"
        android:layout_marginEnd="28dp"
        android:layout_marginBottom="75dp"
        android:text="블루투스 장치에 연결하기"
        app:layout_constraintBottom_toTopOf="@+id/btncancel_setting"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnBluetoothOff" />

    <EditText
        android:id="@+id/tvSendData"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text=""
        app:layout_constraintBottom_toTopOf="@+id/btnsetting"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnConnect" />

    <Button
        android:id="@+id/btntable_flag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="테이블 도착"
        app:layout_constraintBaseline_toBaselineOf="@+id/btnsetting"
        app:layout_constraintEnd_toStartOf="@+id/btncancel_setting"
        app:layout_constraintStart_toEndOf="@+id/btnsetting" />

    <Button
        android:id="@+id/btnsetting"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="25dp"
        android:text="설정"
        app:layout_constraintBottom_toTopOf="@+id/btnfront"
        app:layout_constraintEnd_toStartOf="@+id/btntable_flag"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvSendData" />

    <Button
        android:id="@+id/btncancel_setting"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="90dp"
        android:text="설정취소"
        app:layout_constraintBottom_toTopOf="@+id/btnright"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btntable_flag"
        app:layout_constraintTop_toBottomOf="@+id/btnConnect" />

    <Button
        android:id="@+id/btnfront"
        android:layout_width="81dp"
        android:layout_height="60dp"
        android:text="전진"
        app:layout_constraintBottom_toTopOf="@+id/btnleft"
        app:layout_constraintEnd_toStartOf="@+id/btnright"
        app:layout_constraintStart_toEndOf="@+id/btnleft"
        app:layout_constraintTop_toBottomOf="@+id/btnsetting" />

    <Button
        android:id="@+id/btnleft"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="85dp"
        android:text="좌회전"
        app:layout_constraintBottom_toTopOf="@+id/btnback"
        app:layout_constraintEnd_toStartOf="@+id/btnfront"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnfront" />

    <Button
        android:id="@+id/btnright"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginEnd="85dp"
        android:layout_marginBottom="215dp"
        android:text="우회전"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btnfront"
        app:layout_constraintTop_toBottomOf="@+id/btncancel_setting" />

    <Button
        android:id="@+id/btnback"
        android:layout_width="85dp"
        android:layout_height="0dp"
        android:layout_marginBottom="140dp"
        android:text="후진"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnleft" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="468dp"
        android:layout_height="0dp"
        android:layout_marginStart="1dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView2"
        app:srcCompat="@drawable/serveware_design" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="585dp"
        app:layout_constraintBottom_toTopOf="@+id/imageView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/tvBluetoothStatus"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/serveware_design_2" />

</androidx.constraintlayout.widget.ConstraintLayout>